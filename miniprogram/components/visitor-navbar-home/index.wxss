.nav-bar {
    position: fixed;
    width: 100%;
    top: 0;
    color: #fff;
    background: seagreen;
}

.container{
    position: absolute;
    display: flex;
    justify-content: space-between;
}

.nav-bar .search {
    flex: 0.9;
    color: #333;
    font-size: 14px;
    background: #fff;
    border-radius: 50px;
    background: #ddd;
    padding-left: 12px;
    padding-right: 12px;
    display: flex;
    align-items: center;
    margin-right: 4vw;
}

.nav-bar .city{
    max-width: 20vw;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    padding-right: 12px;
    position: relative;
    margin-left: 3vw;
}

.search .input{
    flex: 1;
    margin-left: 2vw;
}

.triangle::after{
    content: "";
    width: 0;
    height: 0;
    position: absolute;
    border-left: 5px solid transparent;
    border-right: 5px solid transparent;
    border-top: 7px solid #aaa;
    top: 0;
    right: 0;
    bottom: 0;
    margin: auto;
}

