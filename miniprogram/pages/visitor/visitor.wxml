<!-- miniprogram/pages/vistor/vistor.wxml -->
<!-- navBar 头部区域 -->
<visitor-navbar-home city="{{localCity}}"></visitor-navbar-home>

<!-- page页面组件 -->
<!-- 轮播图组件 -->
<my-swiper></my-swiper>

<!-- 摊位种类菜单 -->
<visitor-item-list></visitor-item-list>

<!-- 底部tabBar -->
<van-tabbar active="{{ active }}" bind:change="onChange" active-color="#1296db" inactive-color="#000">
  <van-tabbar-item>
    <image slot="icon" src="{{icon.home.normal}}" mode="aspectFit" style="width: 30px; height: 25px;" />
    <image slot="icon-active" src="{{icon.home.active}}" mode="aspectFit" style="width: 30px; height: 25px;" />
    首页
  </van-tabbar-item>
  <van-tabbar-item>
    <image slot="icon" src="{{icon.activity.normal}}" mode="aspectFit" style="width: 30px; height: 25px;" />
    <image slot="icon-active" src="{{icon.activity.active}}" mode="aspectFit" style="width: 30px; height: 25px;" />
    活动
  </van-tabbar-item>
  <van-tabbar-item>
    <image slot="icon" src="{{icon.user.normal}}" mode="aspectFit" style="width: 30px; height: 25px;" />
    <image slot="icon-active" src="{{icon.user.active}}" mode="aspectFit" style="width: 30px; height: 25px;" />
    我的
  </van-tabbar-item>
</van-tabbar>