/* views/merchant-minePage/index.wxss */
.header{
    width: 750rpx;
    height: 160rpx;
    background-color: #eee;
    padding: 20rpx 20rpx;
    box-sizing: border-box;
}

.header-wrapper{
    width: 100%;
    height: 100%;
    display: flex;
}

.user-avatar{
    width: 120rpx;
    height: 120rpx;
    margin-right: 30rpx;
    border-radius: 50%;
    overflow: hidden;
}

.mid-content{
    flex: 1;
    height: 100%;
    font-size: 24rpx;
}

.title{
    text-align: center;
    font-size: 32rpx;
}

.score{
    margin: 0 20rpx;
}

.tag {
    margin:10rpx 20rpx;
}

.right-content{
    width: 150rpx;
    height: 120rpx;
    text-align: center;
    display: flex;
    flex-direction: column;
}

.show-open{
    margin-top: 30rpx;
}

.total-stall{
    margin-top: 20rpx;
    font-size: 20rpx;
    text-align: center;
}

.border-box{
    width: 750rpx;
    height: 200rpx;
    display: flex;
    align-items: center;
    border: 4rpx solid #eee;
    border-top: none;
    box-sizing: border-box;
}

.wrapper{
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.mid-line{
    width: 4rpx;
    height: 80%;
    background-color: #eee;
}

.num{
    margin: 10rpx;
}

.desc{
    margin: 10rpx;
    font-size: 28rpx;
}

.type{
    margin-top: 10rpx;
    font-size: 24rpx;
}

.close-stall{
    position: fixed;
    right: 10rpx;
    bottom: 150rpx;
    z-index: 1000;
}